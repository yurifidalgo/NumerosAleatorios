<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullScreen" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="label">
        <item name="android:textSize">@dimen/tamanho_texto_padrao</item>
    </style>

    <style name="label_rodape_splash" parent="label">
        <item name="android:textColor">#ff0080</item>
        <item name="android:textSize">@dimen/tamanho_texto_rodape_splash</item>
    </style>

</resources>
